<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtkode_provinsi"
        android:textColor="@color/teal_200"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="kode_provinsi"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/table_content_cell_bg"
        android:textAlignment="center"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/txtnama_provinsi"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="kode_provinsi"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp"
        android:textColor="@color/teal_200"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/txtnama_perangkat_daerah"
        android:textColor="@color/teal_200"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="nama_perangkat_daerah"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/txtjumlah_colocation"
        android:textColor="@color/teal_200"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="jumlah_colocation"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtsatuan"
        android:textColor="@color/teal_200"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="satuan"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/table_content_cell_bg"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txttahun"
        android:textColor="@color/teal_200"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="tahun"
        android:layout_gravity="center"
        android:background="@drawable/table_content_cell_bg"
        android:textSize="18sp"
        android:textAlignment="center"/>


</LinearLayout>